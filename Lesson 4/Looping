msg = "i LOVE my mom and Dad."

def palindrome(string)
  new_msg = ""
  string.scan do |str|
    if str.reverse == str && str.length >= 2
      str.upcase!
    end
    new_msg << str
  end
  p new_msg
end

palindrome(msg)


